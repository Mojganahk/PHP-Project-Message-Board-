{% extends "master.html.twig" %}

{% block title %}Category {% if isEditing %}edit{% else %}add{% endif %}{% endblock %}

{% block content %}
    <div class="main showcase-page">
        <section class="module-extra-small bg-dark">
            <div class="container">

           

                             <div class=" col-sm-4 col-md-4 col-lg-4">
                <div class="callout-text font-alt">
                            <div>
                                {% if errorList %}
                                    <ul>
                                        {% for error in errorList %}
                                            <li>{{error}}</li>
                                            {% endfor %}
                                    </ul>
                                {% endif %}
                                <form method="post" enctype="multipart/form-data">

                                    Name: <input  class="form-control" type="text" name="categoryName" value="{{v.categoryName}}"><br><br>
                                    Description: <textarea class="form-control" row="7" name="description">{{v.description}}</textarea><br><br>
                                    <input   class="btn btn-border-w btn-round" type="file" name="categoryImage"><br>
                                    <input class="btn btn-border-w btn-round" type="submit" value="{% if isEditing %}Update{% else %}Add{% endif %} category">
                                    <input class="btn btn-border-w btn-round" type="submit" value="Cancel">
                                </form>

                            </div>
                    </div>
                </div>
            </div>

        </section>
    </div>





{% endblock %}