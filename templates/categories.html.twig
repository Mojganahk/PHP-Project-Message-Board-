{% extends "master.html.twig" %} {#userrrrrrrr#}

{% block title %}Categories{% endblock %}


{% block content %} 

    <div class="main showcase-page">
        <section class="module-extra-small bg-dark">
            <div class="container">
                <div class="row">

               
                {% block UserIDentification %}

                    {% if userSession %}
                        <p>Hello {{ userSession.name }}, You are Logged in.
                            You may <a href="/logout">logout</a></p>
                        {% else %}
                        <p>You're not logged in. You may <a href="/register">Register</a>
                            or <a href="/login">Login</a>.</p>
                        {% endif %}

                {% endblock %}
            </div>
            <div class=" col-sm-4 col-md-9 col-lg-12">
                <div class="callout-text font-alt">
                    <h4 style="margin-top: 0px; ">


                        <div>

                            {% for c in list %}
                                <div>
                                    <div>
                                        <div class="col-xs-12 col-md-4">
                                            <a href="{{c.catId}}">
                                                <img class="center-block" src="{{c.imagePath}}" width="200" height="200">
                                            </a>
                                            <h5 class="text-center">{{c.categoryName}}</h5>
                                            <h6 class="text-center">{{c.description}}</h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div>
                                    <div colspan="6">
                                        <p>You have no categories</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                </div>
 </div>
            </div>

</section>
</div>



{% endblock %}