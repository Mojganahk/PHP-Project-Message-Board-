{% extends "master.html.twig" %}

{% block title %}Register{% endblock %}

{% block headextra %}
    <script>
        $(document).ready(function () {
            // respond to all events that may change the value of input
            $('input[name=email]').bind('propertychange change click keyup input paste', function () {
                // AJAX request
                var email = $('input[name=email]').val();
                $('#isTaken').load('/isemailregistered/' + email);
            });
        });
    </script>
{% endblock %}

{% block content %}
    {% if errorList %}
        <ul>
            {% for error in errorList %}
                <li>{{error}}</li>
                {% endfor %}
        </ul>
    {% endif %}
    


<div class="main">
      <section class="module">
         <div class="container">
            <div class="row">
              <div class="col-sm-5">
                <h4 class="font-alt">Register</h4>
                <hr class="divider-w mb-10">
                <form class="form" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                    <input class="form-control" id="E-mail" type="email" name="email" value="{{v.email}}" placeholder="Email"/><span id="isTaken"></span>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="name" type="text" name="name" value="{{v.name}}" placeholder="name"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="pass1" type="password" name="pass1" placeholder="Password"/>
                  </div>
                  <div class="form-group">
                    <input class="form-control" id="pass2" type="password" name="pass2" placeholder="Re-enter Password"/>
                  </div>
                 
                      <div class="form-group">
                    <input class="form-control"  type="file" name="avatar" />
                  </div>
                     <div class="form-group">
                    <button class="btn btn-block btn-round btn-b" type="submit" value="Register">Register</button>
                  </div>
                </form>
                  </div>
                  </div>
              </div>
      </section >
    
</div>

{% endblock %}